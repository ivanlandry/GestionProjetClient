<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="GestionProjetClient.dialogues.AjouterClientDialogue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GestionProjetClient.dialogues"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid>
        <ScrollViewer>
            <StackPanel Orientation="Vertical">
             
                <TextBox x:Name="tbxNom" Header="Nom" Margin="10 10 10 10"></TextBox>
                <TextBlock x:Name="tblNomErreur" Foreground="Red"></TextBlock>
                
               
                <TextBox x:Name="tbxAdresse" Header="Adresse" Margin="10 10 10 10"></TextBox>
                <TextBlock x:Name="tblAdresseErreur" Foreground="Red"></TextBlock>

                <TextBox x:Name="tbxtelephone" Header="Telephone" Margin="10 10 10 10"></TextBox>
                <TextBlock x:Name="tblTelephoneErreur" Foreground="Red"></TextBlock>

                <TextBox x:Name="tbxEmail" Header="Email" Margin="10 10 10 10"></TextBox>
                <TextBlock x:Name="tblEmailErreur" Foreground="Red"></TextBlock>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ContentDialog>
